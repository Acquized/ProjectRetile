// contributing.json - This File is used by gitmagic.io - For Contributing Guides, please visit the CONTRIBUTING.md File in the Main Repository Tree.
{
  "commit": {
    "cannot_be_fixup": true,
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 4,
    "subject_must_be_shorter_than": 80,
    "subject_must_be_single_line": true,
    "subject_must_start_with_case": "upper",
    "subject_must_not_end_with_dot": true,
    "subject_must_include_prefix": {
      "prefixes": ["[Fix]", "[Feature]", "[CI]", "[Docs]", "[Misc]", "[Performance]", "[Security]", "[Cleanup]", "[Prepare]", "[Merge]"]
    }
  },

  "pull_request": {
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 4,
    "subject_must_be_shorter_than": 80,
    "subject_must_start_with_case": "upper",
    "subject_must_not_end_with_dot": true,
    "body_cannot_be_empty": true,
    "body_must_close_github_issue": true
  },

  "issue": {
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 4,
    "subject_must_be_shorter_than": 80,
    "subject_must_start_with_case": "upper",
    "subject_must_not_end_with_dot": true,
    "body_cannot_be_empty": true
  },

  "branch": {
    "name_must_be_longer_than": 4,
    "name_must_be_shorter_than": 80
  }
}